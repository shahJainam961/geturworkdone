<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <form class="item" action="/" method="post">
            <input type="text" autocomplete="off" name="newItem" placeholder="New Item">
            <button type="submit" class="add" name="list" value=<%= listTitle %>>+</button>
        </form>

        <% newDo.forEach(function(n){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input name="checkbox" value="<%= n._id %>" onchange="this.form.submit()" type="checkbox">
                    <p><%= n.name %></p>
                </div> 
            </form> 
        <%})%>

    </div>
<%- include("footer") -%>